.block{
  background-color: #f9f9f9;
  padding: 10px 0px;
  margin: 0 10px;
  border-radius: 5px;
}
.block-content{
  padding: 0px 20px;
}
.banner{
  height: 360rpx;
  background: #00001c;
  color: rgba(255,255,255,0.8);
  position: relative;
}
.banner-bg{
  position: absolute;
  width: 100%;
  height: 360rpx;
  z-index: 1;
  overflow:hidden;
   /* filter: blur(1px);     */
}
.banner-bg-img{
  width: 100%;
}
.banner-context{
  position: relative;
  z-index: 2;
  width: 100%;
  height: 360rpx;
  padding: 20rpx 3%;
  box-sizing: border-box;
}
.icon-location{
  width: 48rpx;
  height: 48rpx;
  opacity: 0.6;
  vertical-align: text-bottom;
}
.city-location{
  font-size: 32rpx;
}
.tem-box{
  position: relative;
  margin-top: 30rpx;
}
.city-tem{
  font-size: 72rpx;
  line-height: 72rpx;
  /* vertical-align: top; */
}
.city-tem-unit{
  position: absolute;
  top:0;
  left: 90rpx;
  font-size: 24rpx;
}
.city-info{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.city-info-line{
  height: 24rpx;
  line-height: 24rpx;
  margin: 0 10rpx;
}
.info-box{
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  left: 0;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
}
.info-item{
  width: 33%;
  text-align: center;
  border-right: 1px solid rgba(255,255,255,0.3);
  font-size: 48rpx;
}
.info-item:last-child{
  border: none;
}
.b{
  display: block;
  font-size: 24rpx;
}
.future{
  font-size: 24rpx;
  color: #444;
  margin-top: 20rpx;
}
.future-item{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  text-align: center;
  line-height: 120rpx;
  border-bottom: 1px solid #eee;
  margin: 0 3%;
}
.date-txt,.date-tem{
  flex: 1;
}
.date-info{
  flex: 1.5;
  text-align: left;
}
.date-txt{
  text-align: left;
  padding-left: 45rpx;
}
.date-tem{
  text-align: right;
  padding-right: 30rpx;
}
.clothing{
  font-size: 24rpx;
  color: #666;
  margin-top: 20rpx;
}
.tit{
  font-size: 28rpx;
  padding: 0 3%;
  color: #222;
}
.clothing-desc{
  position: relative;
  font-size: 24rpx;
  display: block;
  width: 80%;
  margin: 20rpx auto;
  border: 1px solid #f1f1f1;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
}
.c3{
  position: absolute;
  top: -16rpx;
  left: 20rpx;
  height: 0px;
  width: 0px;
  border-left: 16rpx solid transparent;
  border-bottom: 16rpx solid #f1f1f1;
  border-right: 16rpx solid transparent;
  z-index: 1;
}
.c3::after{
  content: '';
  position: absolute;
  top: 1px;
  left: -14rpx;
  height: 0px;
  width: 0px;
  border-left: 16rpx solid transparent;
  border-bottom: 16rpx solid #fbfbfb;
  border-right: 16rpx solid transparent;
  z-index: 2;
}
.icon-image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.tips{
  text-align: center;
  font-size: 20rpx;
  color: #666;
  margin-top: 60rpx;
}
.trend{
  margin-top: 20rpx;
}
.canvas-box{
  width: 100%;
  margin-top: 20rpx;
}